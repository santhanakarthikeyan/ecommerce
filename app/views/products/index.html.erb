<p id="notice"><%= notice %></p>

<h1>Products</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Price</th>
      <th>Promotion</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.name %></td>
        <td><%= product.price %></td>
        <td><%= product.promotion.try(:name) %></td>
        <td><%= link_to 'Add to Cart', product_add_to_cart_path(product, id: product.id), method: :post %></td>
        <td><%= link_to 'Show', product %></td>
        <td><%= link_to 'Edit', edit_product_path(product) %></td>
        <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Product', new_product_path %>
<%= link_to " Cart( #{session[:item_list].size} )", new_product_path, title: session[:item_list].join(', '), class: 'fa fa-shopping-cart'%>
<%= link_to 'Clear Cart', clear_cart_path, method: :delete%>
